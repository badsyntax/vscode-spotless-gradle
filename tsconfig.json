{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "es2018.promise", "es2019.array", "dom"],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"]
}
