{
  "name": "vscode-spotless-gradle",
  "displayName": "Spotless Gradle",
  "description": "Format your source files using Spotless via Gradle",
  "version": "0.0.0",
  "private": true,
  "publisher": "richardwillis",
  "readme": "README.md",
  "author": "Richard Willis <willis.rh@gmail.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "vscode": "^1.45.0"
  },
  "icon": "icon.png",
  "bugs": {
    "url": "https://github.com/badsyntax/vscode-spotless-gradle/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/badsyntax/vscode-spotless-gradle/"
  },
  "extensionDependencies": [
    "richardwillis.vscode-gradle"
  ],
  "extensionDependenciesCompatibility": {
    "richardwillis.vscode-gradle": "^3.0.1"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "spotless",
    "gradle",
    "java",
    "groovy",
    "scala",
    "kotlin"
  ],
  "activationEvents": [
    "workspaceContains:gradlew",
    "workspaceContains:gradlew.bat"
  ],
  "main": "./dist/extension",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "build": "npm run compile:dev",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile:all && npm run lint",
    "test": "node ./out/test/runTest.js",
    "install:ext": "code --install-extension vscode-spotless-gradle-0.0.0.vsix --force",
    "preinstall:ext": "vsce package",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "compile:dev": "webpack --mode development",
    "compile:prod": "webpack --mode production",
    "compile:test": "tsc -p ./",
    "compile:all": "npm run compile:dev && npm run compile:test",
    "install:vscode-gradle": "npm install $(npm pack ../vscode-gradle/npm-package | tail -1)"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.39",
    "@types/sinon": "^9.0.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "snyk": "^1.320.3",
    "ts-loader": "^7.0.4",
    "typescript": "^3.9.2",
    "vsce": "^1.75.0",
    "vscode-test": "^1.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "semver": "^7.3.2",
    "vscode-gradle": "^3.0.1"
  },
  "snyk": true
}
