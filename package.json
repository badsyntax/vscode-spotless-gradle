{
  "name": "vscode-spotless-gradle",
  "displayName": "Spotless Gradle",
  "description": "Format your source files using Spotless via Gradle",
  "version": "0.0.0",
  "private": true,
  "publisher": "richardwillis",
  "readme": "README.md",
  "author": "Richard Willis <willis.rh@gmail.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "vscode": "^1.45.0",
    "node": "^12.10.0",
    "npm": "^6.10.3"
  },
  "icon": "icon.png",
  "bugs": {
    "url": "https://github.com/badsyntax/vscode-spotless-gradle/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/badsyntax/vscode-spotless-gradle/"
  },
  "extensionDependenciesCompatibility": {
    "richardwillis.vscode-gradle": "^3.0.1"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "spotlessGradle.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "spotlessGradle.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "build": "npm run compile:dev",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile:all && npm run lint",
    "test": "node ./out/test/runTest.js",
    "install:ext": "code --install-extension vscode-spotless-gradle-0.0.0.vsix --force",
    "preinstall:ext": "npm run package",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "compile:dev": "webpack --mode development",
    "compile:prod": "webpack --mode production",
    "compile:test": "tsc -p ./",
    "compile:all": "npm run compile:dev && npm run compile:test",
    "install:vscode-gradle": "npm install $(npm pack ../vscode-gradle/npm-package | tail -1)",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.2",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.12.67",
    "@types/sinon": "^9.0.8",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "sinon": "^9.2.0",
    "snyk": "^1.413.2",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "vsce": "^1.81.1",
    "vscode-test": "^1.4.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "dependencies": {
    "semver": "^7.3.2",
    "vscode-gradle": "^3.5.0"
  },
  "snyk": true
}
